<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<ListView android:layout_width="match_parent"
		android:layout_height="wrap_content" android:id="@+id/listView1"
		android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
		android:cacheColorHint="#00000000" android:layout_alignParentBottom="true"></ListView>
	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="@string/welcome"
		android:textStyle="bold" android:id="@+id/txtWelcome"
		android:textSize="25dip" android:layout_below="@+id/imageView1"
		android:layout_alignParentLeft="true" android:layout_marginLeft="36dp"
		android:layout_marginTop="49dp"></TextView>
	<ImageView android:layout_width="wrap_content" android:id="@+id/imageView1"
		android:layout_height="wrap_content" android:src="@drawable/camera"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="104dp"></ImageView>
	<TextView android:layout_width="wrap_content" android:id="@+id/txtPresentacion"
		android:layout_height="wrap_content" android:textSize="12dip"
		android:layout_below="@+id/txtWelcome" android:layout_alignLeft="@+id/txtWelcome"
		android:layout_alignRight="@+id/imageView1" android:text="@string/Presentation"></TextView>
</RelativeLayout>
